<div class="container">
  <div class="row justify-content-md-center">
    <div class="form-group col-sm-6">
    <%= form_for(@movie) do |f| %>
      <div class="form-group row">
        <%= f.text_field :name_movie ,placeholder:"Nombre", class:"form-control"%>
      </div>
      <div class="form-group row">
        <%= f.text_field :description ,placeholder:"Descripción", class:"form-control"%>
      </div>
      <div class="form-group row">
        <%= f.text_field :url_movie ,placeholder:"Película", class:"form-control"%>
      </div>
      <div class="form-group row">
        <%= f.number_field :presentation_days ,placeholder:"Días de presentación", class:"form-control"%>
      </div>
      <div class="form-group row" style="float:right">
        <%= f.submit "Crear Película",class:"btn btn-primary"%>
      </div>
    <% end %>
    <%= link_to "Ver todas las películas", api_v1_movies_path %>
   </div>
  </div>
</div>
